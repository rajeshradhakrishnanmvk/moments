    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker .NET Core Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            }
        },
        {
            "name": ".NET Core Docker Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "7e47d0c2d03f"
                ],
                "debuggerPath": "/remote_debugger/vsdbg",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            }
        },
        {
            "name": "moments.auth",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "moments.auth-build",
            "program": "${workspaceFolder}/moments.api/moments.auth/moments.auth.api/bin/Debug/netcoreapp3.1/moments.auth.api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/moments.api/moments.auth/moments.auth.api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "PORT": "8081"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "moments.auth.op",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "moments.auth.op-build",
